@{
    ViewData["Title"] = "Directory Analyzer";
}

<h1>Directory Analyzer</h1>

<form asp-action="Analyze" method="post">
    <div class="form-group">
        <label for="directoryPath">Directory Path</label>
        <input type="text" class="form-control" id="directoryPath" name="directoryPath" />
    </div>
    <button type="submit" class="btn btn-primary">Analyze</button>
</form>


@if (ViewData["DebugMessages"] is List<string> debugMessages && debugMessages.Any())
{
    <div class="alert alert-danger">
        @foreach (var message in debugMessages)
        {
            <p>@message</p>
        }
    </div>
}


